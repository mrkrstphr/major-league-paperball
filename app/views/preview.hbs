<div class="bg-black text-white w-full py-4 text-center">
  <div class="text-lg">Starting Soon</div>
  <div class="text-2xl">{{followedTeam.name}} {{atOrVs}} {{opponentTeam.name}}</div>
  <div class="text-lg">{{gameTime}} - {{venue}}</div>

  {{#if seriesRecord}}
    {{#if seriesTied}}
      <div class="mt-4">The series is tied {{seriesRecord}}</div>
    {{else}}
      <div class="mt-4">{{seriesLeader}} lead the series {{seriesRecord}}</div>
    {{/if}}
  {{/if}}
</div>

<h2 class="mt-8 text-center text-lg font-medium">Probable Pitchers</h2>

<div class="mt-2 flex w-full space-x-8">
  <div class="flex-1 text-right">
    <div class="font-bold">{{probablePitchers.followed.name}}</div>
    <div>{{probablePitchers.followed.era}} ERA</div>
    <div>{{probablePitchers.followed.record}}</div>
  </div>
  <div class="flex-1 text-left">
    <div class="font-bold">{{probablePitchers.opponent.name}}</div>
    <div>{{probablePitchers.opponent.era}} ERA</div>
    <div>{{probablePitchers.opponent.record}}</div>
  </div>
</div>
